<h1>New comment for <%=h @comment.player.name %></h1>

<%= error_messages_for :comment %>

<% form_for(:comment, :url => comments_path) do |f| %>
  <%= f.hidden_field :player_id %>
  <%= f.text_area :body %>
  <p><%= submit_tag "Create" %></p>
<% end %>

<%= link_to 'Back', player_path(@comment.player) %>